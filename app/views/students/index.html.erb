<div class="container">
    <h1>Students:</h1>
   <a href="/students/new" class="waves-effect waves-light btn indigo lighten-1"><i class="material-icons md-24 right icon align"></i>Add Student</a>

 <table class="table">
            <thead>
                <tr>
                    <th class="first_name" scope="col">First Name</th>
                    <th class="last_name" scope="col">Last Name</th>
                    <th class="age" scope="col">Age</th>
                    <th class="education" scope="col">Education</th>
                    <th class="education" scope="col">Cohort</th>
                    <th>Show</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
        
        <% @students.each do |student| %>
            <tr>
            <div id="delete<%= student.id %>">
            <tbody id="student<%= student.id %>">
                    <th> <%= student.first_name %> </td>
                    <td> <%= student.last_name %> </td>
                    <td> <%= student.age %> </td>
                    <td> <%= student.education %> </td>
                    <td> <%= student.cohorts.name %> </td>
                    <td> <a href="/students/<%= student.id %>"><i class="material-icons md-25">show</i></a></td>
                    <td> <a href="/students/<%= student.id %>/edit"><i class="material-icons md-25">edit</i></a></td>
                    <td> <%= link_to "Delete", student_path(student.id), method: :delete, remote: true %> </td>
            </tr>
            </tbody>
        <% end %>
    </table>

</div>