<!DOCTYPE html>
<html>
  <head>
    <title>AdminPanel3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <nav>
    <ul>
    <% if current_user %>
      <li><a href="<%= users_path %>" id="welcome-nav">Welcome, <%= current_user.email%></a></li>
      <li><a href="<%= students_path %>">Students</a></li>
      <li><a href="<%= instructors_path %>">Instructors</a></li>
      <li><a href="<%= courses_path %>">Courses</a></li>
      <li><a href="<%= cohorts_path %>">Cohorts</a></li>
      <li> <%= link_to "Logout", logout_path, method: :delete %> </li>
    <% else %>
      <li> <%= link_to "Login", login_path %> </li>
      <li> <%= link_to "Signup", signup_path %> </li>
    <% end %>
    </ul>
      
  </nav>
  <% if flash[:notice]%>
  <%= flash[:notice]%>
<% end %>
<% if flash[:alert]%>
  <%= flash[:alert]%>
<% end %>
<br>

    <%= yield %>
  </body>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</html>
