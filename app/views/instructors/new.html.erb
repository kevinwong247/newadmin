<div class="container">
  <div class="row">
    <%= form_with model: @instructor, url: instructors_path, class: :col, local: true do |f| %>
      <div class="col">
        <div class="input-field col s12">
          <p>
            <%= f.label :first_name %><br>
            <%= f.text_field :first_name, placeholder: "John" %>
          </p>
        </div>
      </div>
      <div class="col">
        <div class="input-field col s12">
          <p>
            <%= f.label :last_name %><br>
            <%= f.text_field :last_name, placeholder: "Doe" %>
          </p>
        </div>
      </div>
      <div class="col">
        <div class="input-field col s12">
          <p>
            <%= f.label :age %><br>
            <%= f.text_field :age, placeholder: "45" %>
          </p>
        </div>
      </div>
      <div class="col">
        <div class="input-field col s12">
          <p>
            <%= f.label :salary %><br>
            <%= f.text_field :salary, placeholder: "120000" %>
          </p>
        </div>
      </div>
      <div class="col l6">
        <div class="input-field col s12">
          <p>
            <%= f.label :education %>
            <%= f.select :education, ['Highschool','College', 'Masters', 'PHD']%>
          </p>
        </div>
      </div>
      <div class="col l6">
        <br>
        <div class="input-field col s6 l6">
          <button class="waves-effect waves-light btn indigo lighten-1" type="submit" >Save
            <%= f.submit " "%>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>